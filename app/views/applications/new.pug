extends ../layout-home
block content
    .container
        .row
            .col-md-12
                form(action="/applications/create" method="POST" role="form" class="new")
                    .form-group
                        h2 Create a Application

                        .form-group(style="width: 400px;")
                            label Name
                            input(name="name" type="text" class="form-control")
                        .form-group(style="width: 400px;")
                            label Description
                            input(name="description" type="text" class="form-control")
                    input(type="submit" value="Submit" class="btn btn-default")
                a(href="/applications" class="btn btn-danger") Back to list